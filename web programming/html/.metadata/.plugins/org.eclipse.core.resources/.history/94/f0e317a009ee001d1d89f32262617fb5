<title>배열메소드</title>
<link rel="stylesheet" href="../css/my.css">

<script>
const arr = ["사과", "바나나", "복숭아", "참외", "사과", "파인애플", "수박", "사과"];

function proc1(){
	
	//찾는 과일 이름입력
	fr = prompt("찾는 과일입력");
	
	//입력한 이름의 과일이 배열에서 몇번째 있는지 검사 - indexOf(과일이름)
	idx = arr.indexOf(fr);
	
	//결과를 출력
	str = `찾는 과일 ${fr}<br>`;
	
	if(idx < 0){
		str += "없습니다"
	}else{
		str += `${idx}번째 있습니다`
	}
	
	document.getElementById('result1').innerHTML = str;
}

proc2 = function(){
	//입력
	fr = prompt("입력하세요.");
	
	//출력내용 
	str = `찾는 과일 ${fr} <br>`;
	
	//찾기 
	idx = arr.lastIndexOf(fr);
	
	if (idx == -1) {
		str += `없습니다.`
	} else {
		str += `${idx} 번째 있습니다.`
	}
	
	document.getElementById('result2').innerHTML = str;
}

proc3 = () => {
	//입력
	fr = prompt("입력하세요.");
	
	//출력내용 
	str = `찾는 과일 ${fr} <br>`;
	
	//찾기 
	idx = 0;
	//찾은 결과를 누적시키는 변수 0, 4, 7 번째 (사과를 찾는다면) 
	str = "index : ";
	flag = true;
	while(true) {
		//사과, 0번째 
		//indexOf(item, start); 배열에서 요소를 찾아 위치를 반환한다.
		idx = arr.indexOf(fr, idx);

		if (idx == -1) break;
		
		str += `[${idx}], `;
		idx ++;
		flag = false;
	}
	//찾는과일 : 사과 
	// 0,4,7, => 마지막 콤마 지우기
	a = str.lastIndexOf(',');
	str = str.slice(0, a);
	
	if (flag) str += `${fr} 은(는) 없습니다.`;
	else str += ` 번째 있습니다.`;
	
	document.getElementById('result3').innerHTML = str;
}
function proc4() {
	console.log(arr);
	// 배열에 추가 - push (a,b,c ...)
	
	str = `원래 배열: [${arr}] <br>`;
	
	arr.push("딸기", 100, 200);
	
	str += `추가 후 배열: [${arr}]`;
	
	document.getElementById('result4').innerHTML = str;
}

proc5 = () => {
	// 배열에서 - pop( return ~~ )
	str = `원래 배열: [${arr}] <br>`;
	
	popValue = arr.pop();
	
	str += `삭제 후 배열: [${arr}] <br> 삭제된 요소: ${popValue}`;

	document.getElementById('result5').innerHTML = str;
}

proc6 = () => {
	newArr = arr.slice(1,4);
	
	str = `원래 배열: [${arr}] <br>`;
	str += `자른 후 배열: [${newArr}]`;

	document.getElementById('result6').innerHTML = str;
}

proc7 = () => {
	//splice(index, n, a, b, c)
	//splice(2, 1, 100, 200);			//1개 삭제후 요소 넣기 
	//splice(2, 0, 100, 200, 300);		//0개 삭제 후 요소 넣기 
	//splice(2,3);							//2번째 위치에서 3개 삭제하기
	
	str = `원래 배열: [${arr}] <br>`;
	
	arr.splice(2, 1, 100, 200);		
	
	str += `수정 후 배열: [${newArr}]`;
	
	document.getElementById('result').innerHTML = str;
	
}
</script>
</head>
<body>
<div class="box">
  <h3>찾기</h3>
  
  <input type="button" value="indexOf" onclick="proc1()">
  <input type="button" value="LastIndexOf" onclick="proc2()">
  <input type="button" value="여러개 찾기" onclick="proc3()">
  
  <div id="result1" class="result"></div>
  <div id="result2" class="result"></div>
  <div id="result3" class="result"></div>
</div>

<div class="box">
  <h3>추가 삭제</h3>
  
  <input type="button" value="push" onclick="proc4()">
  <input type="button" value="pop" onclick="proc5()">
  
  <div id="result4" class="result"></div>
  <div id="result5" class="result"></div>
</div>

<div class="box">
  <h3>자르기 / 배열 수정</h3>
  
  <input type="button" value="slice" onclick="proc6()">
  <input type="button" value="splice" onclick="proc7()">
  
  <div id="result6" class="result"></div>
  <div id="result7" class="result"></div>
</div>
 
</body>

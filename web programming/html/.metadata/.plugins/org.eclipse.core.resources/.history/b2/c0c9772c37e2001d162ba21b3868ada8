	<form action="입력처리1.jsp" method="get">
		아이디 <input type="text" id="id" class="id" name="id" placeholder="아이디">
		<br> 비밀번호 <input type="password" id="pw" class="pw" name="pw"
			placeholder="비밀번호"> <br> <input type="submit" value="전송">
		<input type="reset" value="취소"> <input type="button"
			value="확인" onclick="f1()"> <br>
		<button type="submit">전송</button>
		<button type="reset">취소</button>
		<button type="button" onclick="f1()">확인</button>
	</form>

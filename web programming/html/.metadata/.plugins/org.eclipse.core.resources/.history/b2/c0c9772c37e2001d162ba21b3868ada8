<script>
	function f1() {
		// alert("Hello "); 

		//script 에서 html 요소로 접근하기
		//var : variable 변수 (let 도 가능)
		var vid = document.querySelector("#id");
		var vpw = document.querySelector("#pw");

		//해당 요소에서 입력값을 가져오기 (var 생략 가능)
		idvalue = vid.value;
		pwvalue = vpw.value;

		alert("id= " + idvalue + "pass= " + pwvalue);
	}
</script>

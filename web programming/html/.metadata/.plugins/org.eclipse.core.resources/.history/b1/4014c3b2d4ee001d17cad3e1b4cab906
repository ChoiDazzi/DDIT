<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>String 객체</title>
<link rel ="stylesheet" href="../css/my.css">
<script>
	// substring
	proc1 = () => {
		vstr = "대한민국 우리나라 좋은나라 대한민국";
		// 한민국(공백)
		sub = vstr.substring(1,5);
		res = "vstr.substring(1,5)";
		printStr('result1');
	}
	// slice
	proc2 = () => {
		sub = vstr.slice();
		res = "vstr.slice()";
		
		printStr('result1');
	}
	// substr
	proc3 = () => {
		
	}
	
	function printStr(result) {
		str = `문자열 : ${vstr} <br>`;
		str += `${res} : ${sub} <br>`;

		document.getElementById(result).innerHTML = str;
	}
	
</script>
</head>
<body>
	<div class="box">
		<h3>문자열 추출 및 자르기</h3>

		<input type="button" value="substring" onclick="proc1()" value ="확인">
		<input type="button" value="slice" onclick="proc2()" value ="확인">
		<input type="button" value="substr" onclick="proc3()" value ="확인">

		<div id="result1" class="result"></div>
	</div>

</body>

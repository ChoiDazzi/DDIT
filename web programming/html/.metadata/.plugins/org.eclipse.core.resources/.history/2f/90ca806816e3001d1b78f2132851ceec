<body>
	<form action="새로운타입.jsp" method="post">
		<label for="id">아이디</label>
		<input type="text" name="id" id="id" readonly="readonly" value="a001">
		<br>
		<!-- readonly : 읽기 전용 -->
		<label for="name">이름</label>
		<input type="text" name="name" id="name" disabled value="korea">
		<br>
		<!-- disabled : 사용 불가한 / 서버로도 안 넘어감 -->
		<input type="hidden" name="age" value="20">
		
		<label for="pass">비밀번호</label>
		<input type="password" name="pass" id="pass" required="required">
		<br>
		
		<label for="tel">전화번호</label>
		<input type="text" name="tel" id="tel" title="010-1234-5678"
						required="required" 
						pattern="[0-9]{2,3}-[0-9]{4}-[0-9]{4}">
		<br>
		
		<input type="submit">
	</form>
</body>
